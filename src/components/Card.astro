---
interface Props {
	image_url: string;
	image_alt: string;
	name: string;
}

const { image_alt, image_url, name } = Astro.props;
---

<card>
	<img src={image_url} alt={image_alt} />
	<b>{name}</b>
	<slot />
</card>

<style>
	card {
		background-color: var(--callout-color);
		border-radius: var(--border-radius);
		flex-grow: 1;
		flex-basis: 0%;
		position: relative;
		overflow: hidden;
		padding: 1.75rem;
		font-size: 1rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;

		img {
			width: 3rem;
		}

		p {
			font-size: 0.9rem;
			color: var(--callout-text);
			line-height: 1.5rem;
		}
	}
</style>

<style is:global>
	.cardgroup {
		display: flex;
		gap: clamp(1rem, 3vw, 2rem);
		width: 100%;
		margin: 0 auto;
		flex-wrap: wrap;

		& :global(article) {
			flex: 1 1 300px;
			min-width: 250px;
		}
		@media (max-width: 768px) {
			flex-direction: column;
			gap: 1rem;

			& :global(article) {
				width: 100%;
			}
		}
	}
</style>
