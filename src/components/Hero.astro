---
interface Props {
  name: string;
  tagline: string;
  image_url: string;
  image_alt: string;
  buttons: {
    primary?: boolean;
    url: string;
    text: string;
  }[];
}

const { name, tagline, image_alt, image_url, buttons } = Astro.props;
---

<hero>
  <div>
    <h1 class="gradient">{name}</h1>
    <h1>{tagline}</h1>
    <div class="btngroup">
      {
        buttons.map((btn) => (
          <a href={btn.url} class={btn.primary ? "primary btn" : "btn"}>
            {btn.text}
          </a>
        ))
      }
    </div>
  </div>
  <img src={image_url} alt={image_alt} />
</hero>

<style>
  .gradient {
    background-image: linear-gradient(
      125deg,
      #ff0000,
      #ffa500,
      #ffff00,
      #008000,
      #0000ff,
      #800080
    );
    background-clip: text;
    color: #ffffff80;
    width: min-content;
    font-weight: 700;
  }

  h1 {
    font-size: 4rem !important;
    line-height: 4rem !important;
  }

  hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-bottom: 2rem;
  }

  hero > div > h1:nth-child(1) {
    margin-top: 5rem;
    margin-bottom: 0;
  }

  hero > div > h1:nth-child(2) {
    margin-top: 0;
    margin-bottom: 2.5rem;
  }

  hero > img {
    align-self: center;
    justify-self: end;
    height: 20rem;
  }

  .btngroup {
    display: flex;
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    hero {
      grid-template-columns: 1fr;

      img {
        display: none;
      }
    }
  }
</style>
